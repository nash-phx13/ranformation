<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @run.user %>
      <h2 class="mt-3">New run'srecode</h2>
      <%= render 'form', run: Run.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Run detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@run.user) do %>
            <%= attachment_image_tag(@run.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @run.user.name %>
            <% end %>
          </td>
          <td><%= link_to @run.title, run_path(@run) %></td>
          <td><%= @run.body %></td>
          <% if @run.user == current_user %>
            <td><%= link_to 'Edit', edit_run_path(@run), class: "btn btn-sm btn-success edit_run_#{@run.id}" %></td>
            <td><%= link_to 'Destroy', run_path(@run), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_run_#{@run.id}"%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>