<div class='container '>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'runs/comment', run: @run,run_comment: @run_comment%>
    </div>
    <div class='col-md-9'>
      <h2>詳細ページ</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@run.user) do %>
            <%= attachment_image_tag(@run.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @run.user.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to @run.title, run_path(@run) %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @run.body %>
          </td>
          <td>
            <!--%= attachment_image_tag(@run, :image, size: '100x220', fallback: 'no_image.jpg') %-->
            <h2>画像</h2>
            <%= attachment_image_tag @run, :image, :fill, 300, 300, format: 'jpg' %>
          </td>
          <% @run_tags.each do |tag| %>
            <tr>
              <td>
                <span class="tag">
                  <%= link_to tag.tag_name,tag_runs_path(tag_id: tag.id) %>
                </span>
              </td>
            </tr>
          <% end %>
          <td class="favorite-btn">
            <%= render "likes/like-btn", run: @run %>
          </td>
          <td>
            コメント数: <%= @run.run_comments.count %>
          </td>
          <!--<td class="run_comments-evaluation" data-score="<%#= @run_comment.evaluation %>">平均を</td>-->
          <% if @run.user == current_user %>
            <td>
              <%= link_to 'Edit', edit_run_path(@run), class: "btn btn-sm btn-success edit_run_#{@run.id}" %>
            </td>
            <td>
              <%= link_to 'Destroy', run_path(@run), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_run_#{@run.id}"%>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>


<script>
  $('.run_comments-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>