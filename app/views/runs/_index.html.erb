<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <!--投稿内容一覧-->
  <tbody>
    <% runs.each do |run| %>
      <tr>
        <td><%= link_to user_path(run.user) do %>
          <%= attachment_image_tag(run.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to run.title, run_path(run), class: "run_#{run.id}" %></td>
        <td><%= run.body %></td>
        <td class="favorite-btn"><%= render "likes/like-btn", run: run %></td>
        <td>コメント数: <%= run.run_comments.count %></td>
        <td class="run-evaluation" data-score="<%= run.evaluation %>"></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $('.run-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>