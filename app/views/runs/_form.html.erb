  <div class="main_group">
    <%= form_with model:run,local:true do |f| %>
      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class: 'form-control run_title' %>
      </div>
      <div class="form-group">
        <%= f.label :本文 %>
        <%= f.text_area :body, class: 'form-control run_body' %>
      </div>
      <div class="form-group">
        <h4>画像</h4>
        <%= f.attachment_field :image %>
      </div>
      <div class="field">
        <%= f.label :tag_ids, 'タグ付' %>
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name do |b| %>
        <%= b.check_box + b.label %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>