
	<div class="main_group row">
		<table class="table table-hover">
			<thead>
				<div class="text-center col-6">
					<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg")  %>
				</div>
					<div class="text-center col-6">
						<% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
              <% else %>
                <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
              <% end %>
            <% else %>
              <%= link_to '設定',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id} fa-2x" %>
            <% end %>
					</div>
			</thead>
			<tbody>
				<tr>
					<td class="text-center">名前</td>
					<td><%= user.name %></td>
					<td></td>
				</tr>
				<tr>
					<td class="text-center">自己紹介</td>
					<td><%= user.introduction %></td>
					<td></td>
				</tr>
				<tr>
					<td class="text-center">登録日</td>
					<td><%= user.created_at.strftime('%Y/%m/%d') %></td>
					<td></td>
				</tr>
				<tr>
					<td class="text-center">フォロー数</td>
					<td><%=  link_to user.followings.count, user_followings_path(user) %>人</td>
					<td></td>
				</tr>
				<tr>
					<td class="text-center">フォロワー数</td>
					<td><%= link_to user.followers.count, user_followers_path(user) %>人</td>
					<td></td>
				</tr>
			</tbody>
		</table>
	</div>

