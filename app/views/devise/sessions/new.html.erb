<div class="container my-5">
  <div class="row mb-3" >
    <div class="col-md-4 offset-md-1">
        <div class="form-header text-center">
          <h2 class="bg-dark text-white text-center">
          <i class="fas fa-sign-out-alt "></i> ログイン</h2>

        </div><br>
        <div class="form-body">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group has-icon">
             <span class="fa fa-envelope form-control-icon" aria-hidden="true"> メールアドレス</span>
             <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder: "メールアドレス"%>
            </div>
            <div class="field">
              <span class="fa fa-lock form-control-icon" aria-hidden="true"> パスワード</span>
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder: "パスワード" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :次回から自動入力する %>
              </div>
            <% end %>
            <div class="actions">
             <%= f.submit "ログイン", class:"btn btn-block btn-info mt-20" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>

