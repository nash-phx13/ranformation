<% if user_signed_in? %>
<% if run.liked_by?(current_user) %>
  <%= link_to run.likes.count, run_likes_path(run), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to run.likes.count, run_likes_path(run), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>
<% end %>

